# Alice Frontend Configuration - EXAMPLE FILE  
# Copy to .env.local and fill in your actual values

# ============== API ENDPOINTS ==============
# Backend API base URL
NEXT_PUBLIC_API_BASE=http://127.0.0.1:8000

# WebSocket URLs
NEXT_PUBLIC_WS_URL=ws://127.0.0.1:8000/ws/alice
NEXT_PUBLIC_VOICE_WS_URL=ws://127.0.0.1:8000/ws/voice-gateway

# ============== VOICE SYSTEM ==============
# Voice debugging and configuration
NEXT_PUBLIC_VOICE_DEBUG=1
NEXT_PUBLIC_VOICE_PROVIDER=browser
NEXT_PUBLIC_WAKE_WORD_ENABLED=false

# Speech recognition
NEXT_PUBLIC_STT_LANGUAGE=sv-SE
NEXT_PUBLIC_STT_CONTINUOUS=true

# Text-to-speech
NEXT_PUBLIC_TTS_ENABLED=true
NEXT_PUBLIC_TTS_VOICE=sv-SE

# ============== UI CONFIG ==============
# Application branding
NEXT_PUBLIC_APP_NAME=Alice
NEXT_PUBLIC_APP_VERSION=2.0
NEXT_PUBLIC_APP_ENV=development

# Feature flags
NEXT_PUBLIC_HUD_ENABLED=true
NEXT_PUBLIC_CALENDAR_WIDGET=true
NEXT_PUBLIC_WEATHER_WIDGET=true

# ============== INTEGRATIONS ==============
# Google OAuth (for client-side)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# ============== DEVELOPMENT ==============
# Development settings
NEXT_PUBLIC_DEV_TOOLS=true
NEXT_PUBLIC_CONSOLE_LOGS=true
NEXT_PUBLIC_MOCK_DATA=false

# API timeouts (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_WS_RECONNECT_DELAY=3000