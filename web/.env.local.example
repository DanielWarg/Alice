# Alice Voice System Configuration

# Voice Mode
NEXT_PUBLIC_VOICE_MODE=always          # always|ptt
NEXT_PUBLIC_ASR_BACKEND=realtime       # realtime|browser
NEXT_PUBLIC_AMBIENT_ENABLED=true
NEXT_PUBLIC_AMBIENT_SUMMARY_INTERVAL_MS=90000
NEXT_PUBLIC_MIN_PARTIAL_LEN=8

# OpenAI Configuration  
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here
NEXT_PUBLIC_OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview
NEXT_PUBLIC_OPENAI_REALTIME_VOICE=nova

# Voice System Configuration
NEXT_PUBLIC_VOICE_PROVIDER=openai
NEXT_PUBLIC_AUDIO_SAMPLE_RATE=24000
NEXT_PUBLIC_METRICS_EXPORT_ENDPOINT=/api/metrics/voice

# Realtime API (för utveckling, använd mock endpoint)
NEXT_PUBLIC_REALTIME_WS=ws://127.0.0.1:8000/ws/realtime-asr

# Optional: Production Realtime API
# NEXT_PUBLIC_REALTIME_WS=wss://api.openai.com/v1/realtime

# Compliance & Privacy Settings (Feature Flags for Uppgift 5)
NEXT_PUBLIC_VOICE_REQUIRE_CONSENT=on
NEXT_PUBLIC_VOICE_SHOW_SYNTHETIC_BADGE=on
NEXT_PUBLIC_VOICE_BLOCK_IMPERSONATION=on
NEXT_PUBLIC_VOICE_PERSIST_AUDIO=off
NEXT_PUBLIC_VOICE_RETENTION_DAYS=0
NEXT_PUBLIC_VOICE_CONTENT_FILTER=strict

# Device & Network Fallback Settings (Feature Flags for Uppgift 6)
NEXT_PUBLIC_VOICE_FALLBACK_TEXT_ON_TTS_TIMEOUT_MS=2000
NEXT_PUBLIC_VOICE_WS_MAX_RETRIES=2
NEXT_PUBLIC_VOICE_OUTPUT_CODEC=auto

# Optional: Compliance reporting endpoint
# NEXT_PUBLIC_COMPLIANCE_ENDPOINT=https://your-compliance-api.com/events