# Alice Backend Configuration - EXAMPLE FILE
# Copy to .env and fill in your actual values

# ============== AI & MODELS ==============
# Ollama (local AI) - required for core functionality
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=gpt-oss:20b

# OpenAI (optional - for future hybrid voice features)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4
OPENAI_VOICE=alloy

# ============== VOICE SYSTEM ==============
# Future voice pipeline configuration
ALICE_VOICE_PROVIDER=browser  # browser|openai|hybrid
ALICE_WAKE_WORD_ENABLED=false
ALICE_TTS_PROVIDER=openai     # openai|azure|elevenlabs

# ============== INTEGRATIONS ==============
# Google APIs (Gmail + Calendar)
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/callback/google

# Spotify (optional)
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:8000/api/auth/callback/spotify

# Weather API (optional)
OPENWEATHER_API_KEY=your-openweather-api-key

# ============== SECURITY ==============
# CORS allowed origins (comma-separated)
ALICE_ALLOWED_ORIGINS=http://localhost:3000

# Authentication (feature flag)
AUTH_ENABLED=false
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-here

# Database encryption (optional)
DB_ENCRYPTION_KEY=your-32-char-encryption-key-here

# ============== SERVER CONFIG ==============
# Server settings
ALICE_HOST=127.0.0.1
ALICE_PORT=8000
ALICE_DEBUG=0
ALICE_ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
LOG_FILE=server/logs/alice.log

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ============== ADVANCED ==============
# Memory and RAG
RAG_ENABLED=true
MEMORY_MAX_ITEMS=10000

# Agent system
AGENT_PARALLEL_EXECUTION=true
AGENT_MAX_STEPS=10

# Performance
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600